<h1><%= __('property_update_form_title') %></h1>
<form class="form-horizontal" role="form" action="/property/update/<%=property.id%>" method="POST">
  <div class="form-group">
    <label for="property_update_title" class="col-sm-2 control-label"><%= __('property_update_title') %></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" required id="property_update_title" name="Property[title]" value="<%= property.title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_image_url" class="col-sm-2 control-label"><%= __('property_update_image_url')%></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="property_update_image_url" name="Property[imageUrl]" value="<%= property.imageUrl %>">
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_estate" class="col-sm-2 control-label"><%= __('property_update_estate')%></label>
    <div class="col-sm-10">
      <select class="form-control" id="property_update_estate" name="Property[estate]"  data-value="<%= property.estate %>">
        <option value="Festival City">Festival City</option>
        <option value="Tin Ma Court">Tin Ma Court</option>
        <option value="City One Shatin">City One Shatin</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_bedrooms" class="col-sm-2 control-label"><%= __('property_update_bedrooms')%></label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="0" id="property_update_bedrooms" name="Property[bedrooms]"  value="<%= property.bedrooms %>">
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_gross_area" class="col-sm-2 control-label"><%= __('property_update_gross_area')%></label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="0" id="property_update_gross_area"  name="Property[grossArea]"  value="<%= property.grossArea %>">
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_expected_tenants" class="col-sm-2 control-label"><%= __('property_update_expected_tenants')%></label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="0" id="property_update_expected_tenants" name="Property[expectedTenants]" value="<%= property.expectedTenants %>">
    </div>
  </div>
  <div class="form-group">
    <label for="property_update_rent" class="col-sm-2 control-label"><%= __('property_update_rent')%></label>
    <div class="col-sm-10">
      <input type="number" class="form-control" min="0" id="property_update_rent" name="Property[rent]" value="<%= property.rent %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"><%= __('common_btn_submit')%></button>
    </div>
  </div>
</form>
<script src="/js/select.js"></script>