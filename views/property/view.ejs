<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title"><%= property.title %></h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4 property-view-imgdiv">
                            <img alt="Property Image" src="<%= property.imageUrl %>" class="img-rounded large"/>
                        </div>
                        <div class="col-md-8">
                           <table class="table table-bordered">
                                <tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_estate')%></label><%= property.estate %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_gross_area')%></label><%= property.grossArea %> sq feet
                                    </td>
                                </tr><tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_rent')%></label>$<%= property.rent %>
                                    </td>
                                </tr><tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_bedrooms')%></label><%= property.bedrooms %>
                                    </td>
                                </tr><tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_expected_tenants')%></label><%= property.expectedTenants %>
                                    </td>
                                </tr><tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_created')%></label><%= property.createdAt %>
                                    </td>
                                </tr><tr>
                                    <td>
                                        <label class="font-weight-bold"><%= __('property_view_updated')%></label><%= property.updatedAt %>
                                    </td>
                                </tr>
                            </table>
                            <button type="button" class="btn btn-primary btn-default col-md-offset-2" onclick="declare('<%= property.id%>')">
                                <%= __('property_view_btn_declare')%>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function declare(id) {
        $.ajax({
            url: '/member/declareInterested/'+ id,
            method: 'PUT',
            success: function(resposeData){
                alert(resposeData);
            }
        });
    }
</script>